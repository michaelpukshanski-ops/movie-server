# ===========================================
# Movie Server Configuration
# ===========================================
# Copy this file to .env and fill in the values

# Node environment (development | production)
NODE_ENV=development

# ===========================================
# API Server
# ===========================================
API_PORT=3001
API_HOST=0.0.0.0

# Session secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your-session-secret-here-change-me

# CSRF secret (generate with: openssl rand -base64 32)
CSRF_SECRET=your-csrf-secret-here-change-me

# Set to true in production with HTTPS
COOKIE_SECURE=false

# ===========================================
# Database
# ===========================================
DB_PATH=./data/movie-server.db

# ===========================================
# qBittorrent
# ===========================================
# Set to false to run without qBittorrent (UI-only mode)
QBITTORRENT_ENABLED=true

# qBittorrent Web UI connection
QBITTORRENT_HOST=http://localhost
QBITTORRENT_PORT=8080
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=adminadmin

# ===========================================
# Downloads
# ===========================================
# Directory where downloads will be saved
DOWNLOAD_DIR=./downloads

# Polling interval for qBittorrent status (ms)
POLL_INTERVAL_MS=1000

# ===========================================
# Upload
# ===========================================
# Maximum upload size in bytes (default: 10GB)
MAX_UPLOAD_SIZE_BYTES=10737418240

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ===========================================
# Frontend
# ===========================================
# URL of the frontend (for CORS)
FRONTEND_URL=http://localhost:3000

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info

# ===========================================
# Plex Integration (optional)
# ===========================================
# Set to true to enable Plex library refresh on download completion
PLEX_ENABLED=true

# Plex server URL (usually http://localhost:32400)
PLEX_HOST=http://localhost:32400

# Plex authentication token
# Get it from: https://support.plex.tv/articles/204059436-finding-an-authentication-token-x-plex-token/
PLEX_TOKEN=

# ===========================================
# ntfy Push Notifications (optional)
# ===========================================
# Set to true to enable push notifications via ntfy.sh
NTFY_ENABLED=true

# ntfy server URL (use https://ntfy.sh for the public server)
NTFY_SERVER_URL=https://ntfy.sh

# Your ntfy topic (create a unique one, e.g., movie-server-abc123)
NTFY_TOPIC=movie-server-michael

# Optional: Access token for private topics
NTFY_ACCESS_TOKEN=

# ===========================================
# Frontend Environment Variables
# ===========================================
# These are used by Next.js (prefix with NEXT_PUBLIC_)
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001/ws

